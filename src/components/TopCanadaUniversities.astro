
---
import { Image } from "astro:assets";
import universityWesternAus from "@assets/img/country-img/uni/Unicanada1.jpg";
import universityQueensland from "@assets/img/country-img/uni/Unicanada2.jpg";
import universitySaouthWales from "@assets/img/country-img/uni/Unicanada3.jpg";
import melburnAustralia from "@assets/img/country-img/uni/Unicanada4.jpg";
---

<section>
  <div class="container">
    <div class="row">
      <div class="col-xxl-6 col-xl-6 col-lg-6 mb-4">
        <h2>Top Universities in Canada</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-xxl-3 col-xl-3 col-lg-6 mb-4">
        <div class="card university-card">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <!-- <span class="badge badge-success">FastLane</span> -->
              <i class="far fa-heart"></i>
            </div>
            <Image src={melburnAustralia} class="card-img-top mb-3 px140" alt="The University of Melbourne" />

            <p class="oswald h5 card-title">
              University of Waterloo</p>
          </div>
        </div>
      </div>
      <div class="col-xxl-3 col-xl-3 col-lg-6 mb-4">
        <div class="card university-card">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <!-- <span class="badge badge-success">FastLane</span> -->
              <i class="far fa-heart"></i>
            </div>
            <Image src={universityQueensland} class="card-img-top mb-3 px140" alt="The University of Queensland" />

            <p class="oswald h5 card-title">The University of British Columbia</p>
          </div>
        </div>
      </div>
      <div class="col-xxl-3 col-xl-3 col-lg-6 mb-4">
        <div class="card university-card">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <!-- <span class="badge badge-success">FastLane</span> -->
              <i class="far fa-heart"></i>
            </div>
            <Image src={universitySaouthWales} class="card-img-top mb-3 px140" alt="The University of New South Wales" />

            <p class="oswald h5 card-title">McGill University</p>
          </div>
        </div>
      </div>
      <div class="col-xxl-3 col-xl-3 col-lg-6 mb-4">
        <div class="card university-card">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <!-- <span class="badge badge-success">FastLane</span> -->
              <i class="far fa-heart"></i>
            </div>
            <Image src={universityWesternAus} class="card-img-top mb-3 px140" alt="University of Western Australia" />

            <p class="oswald h5 card-title">University of Toronto</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
