
---
import { Image } from "astro:assets";
import medicalImage from "@assets/img/courses/medical.webp";
import managementImage from "@assets/img/courses/management.svg";
import engineeringImage from "@assets/img/courses/engineering.jpg";
import universityWesternAus from "@assets/img/country-img/uni/usauniv1.jpeg";
import universityQueensland from "@assets/img/country-img/uni/usauniv2.jpeg";
import universitySaouthWales from "@assets/img/country-img/uni/usauniv4.jpeg";
import melburnAustralia from "@assets/img/country-img/uni/usa4.jpeg"
---

<section>
  <div class="container">
    <div class="row">
      <div class="col-xxl-6 col-xl-6 col-lg-6 mb-4">
        <h2>Top Universities in USA</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-xxl-3 col-xl-3 col-lg-6 mb-4">
        <div class="card university-card">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <!-- <span class="badge badge-success">FastLane</span> -->
              <i class="far fa-heart"></i>
            </div>
            <Image src={melburnAustralia} class="card-img-top mb-3 px140" alt="The University of Melbourne" />

            <p class="h5 oswald card-title">Massachusetts Institute of Technology</p>
          </div>
        </div>
      </div>
      <div class="col-xxl-3 col-xl-3 col-lg-6 mb-4">
        <div class="card university-card">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <!-- <span class="badge badge-success">FastLane</span> -->
              <i class="far fa-heart"></i>
            </div>
            <Image src={universityQueensland} class="card-img-top mb-3 px140" alt="The University of Queensland" />

            <p class="h5 oswald card-title">Stanford University</p>
          </div>
        </div>
      </div>
      <div class="col-xxl-3 col-xl-3 col-lg-6 mb-4">
        <div class="card university-card">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <!-- <span class="badge badge-success">FastLane</span> -->
              <i class="far fa-heart"></i>
            </div>
            <Image src={universitySaouthWales} class="card-img-top mb-3 px140" alt="The University of New South Wales" />

            <p class="h5 oswald card-title">Princeton University</p>
          </div>
        </div>
      </div>
      <div class="col-xxl-3 col-xl-3 col-lg-6 mb-4">
        <div class="card university-card">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <!-- <span class="badge badge-success">FastLane</span> -->
              <i class="far fa-heart"></i>
            </div>
            <Image src={universityWesternAus} class="card-img-top mb-3 px140" alt="University of Western Australia" />

            <p class="h5 oswald card-title">Harvard University</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
